  <footer>
    <div class="container">

      <div class="row">
        {% if informations %}
        <div class="px-0 col-12 col-md-6 col-lg-3">
          <h5 class="border-bottom pt-3 pb-0 mb-0 pb-md-3 text-center text-lg-left text-white title">{{ text_information }}</h5>
          <ul class="list-unstyled py-3 d-flex justify-content-center flex-column align-items-center align-items-lg-start pages">
           {% for information in informations %}
            <li><a class="text-white" href="{{ information.href }}">{{ information.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
        <div class="px-0 col-12 col-md-6 col-lg-3">
          <h5 class="border-bottom pt-3 pb-0 mb-0 pb-md-3 text-center text-white title">Formas de pagamento - Site Seguro</h5>
          <ul class="list-unstyled py-3 d-flex justify-content-center flex-column align-items-center">

            <img src="#" onerror="this.src = document.getElementsByTagName('base')[0].href + '/image/catalog/pagseguro.png'" class="img-fluid">
            
          </ul>
        </div>
        <div class="px-0 col-12 col-md-6 col-lg-3 ">
          <h5 class="border-bottom pt-3 pb-0 mb-0 pb-md-3 text-center text-white title">Redes sociais</h5>
          <div class="row mt-3 w-50 w-md-100 mx-auto">
            <div class="col-3 offset-0 col-md-2 offset-md-4 mb-3 d-flex d-md-block justify-content-center ">
              <a href="{{ instagram }}" class="social_icon_wrapper" target="_blank">
                <i class="fab fa-instagram fa-2x"></i>
              </a>
            </div>
            <div class="col-3 offset-0 col-md-2 mb-3 d-flex d-md-block justify-content-center ">
              <a href="{{ facebook }}" class="social_icon_wrapper" target="_blank">
                <i class="fab fa-facebook-f fa-2x"></i>
              </a>
            </div>
            <div class="col-3 offset-0 col-md-2 offset-md-4 mb-3 d-flex d-md-block justify-content-center ">
              <a href="{{ twitter }}" class="social_icon_wrapper" target="_blank">
                <i class="fab fa-twitter fa-2x"></i>
              </a>
            </div>
            <div class="col-3 offset-0 col-md-2 mb-3 d-flex d-md-block justify-content-center ">
              <a href="{{ pinterest }}" class="social_icon_wrapper" target="_blank">
                <i class="fab fa-pinterest-p fa-2x"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="px-0 col-12 col-md-6 col-lg-3">
          <h5 class="border-bottom pt-3 pb-0 mb-0 pb-md-3 text-center text-lg-right text-white title">Adesivos Dicolar e Decorações</h5>
          <ul class="list-unstyled py-3 d-flex justify-content-center flex-column align-items-center align-items-lg-end">
            <li class="text-white">{{ cnpj }}</li>
            <li><a class="text-white" href="mailto:{{ email }}">{{ email }}</a></li>
            <li><a class="text-white" href="tel:{{tel_link}}">{{ tel }}</a></li>
            <li><a class="text-white" href="tel:{{whatsapp_link}}">{{ whatsapp }}</a></li>
          </ul>
        </div>
      </div>
      <hr>
      <p class="m-0 powered">{{ powered }}</p>
    </div>
  </footer>

  {% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
  {% endfor %}

  </body>
</html>