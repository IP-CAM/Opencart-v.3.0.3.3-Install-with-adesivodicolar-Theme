<div id="carousel-{{module}}" class="carousel slide carousel-fade" data-ride="carousel">
  <ol class="carousel-indicators">
      {% for i in 0..banners|length-1 %}
        {% if i == 0 %}
          <li data-target="#carousel-{{module}}" data-slide-to="{{i}}" class="active"></li>
        {% else %}
          <li data-target="#carousel-{{module}}" data-slide-to="{{i}}"></li>
        {% endif %}
      {% endfor %}
  </ol>
  <div class="carousel-inner">
      {% for i in 0..banners|length-1 %}
        <div class="carousel-item {{ i == 0 ? 'active' : '' }}">
            {% if banners[i].link %}
              <a href="{{ banners[i].link }}">
                <img src="{{ banners[i].image }}" alt="{{ banners[i].title }}" class="img-fluid" />
              </a>
            {% else %}
              <img src="{{ banners[i].image }}" alt="{{ banners[i].title }}" class="img-fluid" />
            {% endif %}
        </div>
      {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carousel-{{module}}" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-{{module}}" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>